#include <iostream>

int main()
{
	
    std::cout << "podaj ciag znakow\n";
	char ciag[100];
	std::cin >> ciag;

	std::cout <<"wprowadzony ciag to:\n"<< ciag<<"\n";
	int n = 0;
	while (ciag[n] != 0)
	{
		n++;
	}
	std::cout << "liczba znakow: " << n<<"\nzmiana znakow na duze\n";

	for (int i = 0; i < n; i++)
	{
		if (ciag[i] >= 97 && ciag[i] <= 122)
		{
			ciag[i] -= 32;
		}
	}
	std::cout << ciag<<"\nzmiana znakow na male\n";
	for (int i = 0; i < n; i++)
	{
		if (ciag[i] >= 65 && ciag[i] <= 90)
		{
			ciag[i] += 32;
		}
	}
	std::cout << ciag;
}
